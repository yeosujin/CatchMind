package CreateRoom;

import java.io.OutputStream;
import java.io.PrintWriter;
import java.net.Socket;
import java.util.Scanner;

public class ChatWriting extends Thread{ // 서버로 메세지 보내는 Thread
	Socket socket = null;

	Scanner scanner = new Scanner(System.in); //	
	public static int isMessageTyped = 0;
	
	public ChatWriting(Socket socket) {
		this.socket = socket;
	}		
	
	
	public void run() {
		try {
			OutputStream out = socket.getOutputStream();
			PrintWriter writer = new PrintWriter(out, true);	
			System.out.println("waiting 들어옴");
			if(isMessageTyped ==1) {
				System.out.println("writing 소켓 보내기");
				writer.println(WaitingRoom.message); // 입력한 메세지 발송		
				isMessageTyped =0;
			}
			
		} catch (Exception e) {
			e.printStackTrace();
		}		
	}

}